{
  "uid": "url-service-dev",
  "title": "URL Service (Dev)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["url-platform", "dev", "service"],
  "templating": {
  "list": [
    {
      "name": "namespace",
      "type": "query",
      "label": "Namespace",
      "datasource": "Prometheus",
      "refresh": 1,
      "query": "label_values(http_requests_total, namespace)",
      "current": { "text": "url-platform-dev", "value": "url-platform-dev" }
    },
    {
      "name": "service",
      "type": "query",
      "label": "Service",
      "datasource": "Prometheus",
      "refresh": 1,
      "query": "label_values(http_requests_total{namespace=\"$namespace\"}, service)",
      "current": { "text": "url-service", "value": "url-service" }
    },
    {
      "name": "route",
      "type": "query",
      "label": "Route",
      "datasource": "Prometheus",
      "refresh": 1,
      "includeAll": true,
      "multi": true,
      "allValue": ".*",
      "query": "label_values(http_requests_total{namespace=\"$namespace\",service=\"$service\"}, route)",
      "current": { "text": "All", "value": "$__all" }
    }
  ]
},
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests / sec (RPS)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Error rate (%)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\",status_code=~\"5..\"}[5m])) / clamp_min(sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\"}[5m])), 1e-9))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (seconds)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{namespace=\"$namespace\",service=\"$service\",route=~\"$route\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p50 (seconds)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(http_request_duration_seconds_bucket{namespace=\"$namespace\",service=\"$service\",route=~\"$route\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top routes by RPS",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (route) (rate(http_requests_total{namespace=\"$namespace\",service=\"$service\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (non-2xx) (%)",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\",status_code!~\"2..\"}[5m])) / clamp_min(sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\"}[5m])), 1e-9))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx rate (req/s)",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\",status_code=~\"5..\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Status codes (req/s): 2xx vs 4xx vs 5xx",
      "gridPos": { "x": 0, "y": 32, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\",status_code=~\"2..\"}[5m]))",
          "legendFormat": "2xx",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\",status_code=~\"4..\"}[5m]))",
          "legendFormat": "4xx",
          "refId": "B"
        },
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",route=~\"$route\",status_code=~\"5..\"}[5m]))",
          "legendFormat": "5xx",
          "refId": "C"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top slow routes (p95 seconds)",
      "gridPos": { "x": 0, "y": 40, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.95, sum by (le, route) (rate(http_request_duration_seconds_bucket{namespace=\"$namespace\",service=\"$service\"}[5m]))))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top erroring routes (5xx req/s)",
      "gridPos": { "x": 12, "y": 40, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (route) (rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",status_code=~\"5..\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Scrape status (up)",
      "gridPos": { "x": 18, "y": 48, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "max(up{namespace=\"$namespace\",service=\"$service\"})",
          "refId": "A"
        }
      ]
    }
  ]
}