{
  "uid": "url-service-dev",
  "title": "URL Service (Dev)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["url-platform", "dev", "service"],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "constant",
        "label": "Namespace",
        "query": "url-platform-dev",
        "current": { "text": "url-platform-dev", "value": "url-platform-dev" }
      },
      {
        "name": "service",
        "type": "constant",
        "label": "Service",
        "query": "url-service",
        "current": { "text": "url-service", "value": "url-service" }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests / sec (RPS)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Error rate (%)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\",status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{namespace=\"$namespace\",service=\"$service\"}[5m])))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (seconds)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\",service=\"$service\"}[5m])) by (le))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Scrape status (up)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "max(up{namespace=\"$namespace\",service=\"$service\"})",
          "refId": "A"
        }
      ]
    }
  ]
}